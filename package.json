{
  "name": "@streaming-hell/telegram-bot",
  "version": "1.1.0",
  "description": "Streaming Hell Telegram bot",
  "author": "Streaming Hell nonprofit organization.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "standard-version",
    "graphql:codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.4.4",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.4.4",
    "@nestjs/mongoose": "7.0.2",
    "@nestjs/platform-express": "7.4.4",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "graphql": "^15.3.0",
    "graphql-request": "^3.1.0",
    "lodash": "4.17.20",
    "mongoose": "5.10.6",
    "nestjs-telegraf": "1.3.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "telegraf-i18n": "^6.6.0",
    "telegraf-session-mongodb": "^1.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/introspection": "^1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-resolvers": "^1.17.8",
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.2",
    "@nestjs/testing": "7.4.4",
    "@types/express": "4.17.8",
    "@types/hapi__joi": "17.1.4",
    "@types/jest": "26.0.14",
    "@types/lodash": "^4.14.161",
    "@types/mongoose": "5.7.36",
    "@types/node": "14.11.1",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.0.0",
    "@typescript-eslint/parser": "3.10.1",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "jest": "26.4.2",
    "prettier": "2.1.2",
    "standard-version": "9.0.0",
    "supertest": "4.0.2",
    "ts-jest": "26.3.0",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
