{
  "name": "@streaming-hell/streaming-hell",
  "version": "1.1.0",
  "description": "Telegram bot for share music with anyone no matter the platform",
  "keywords": [
    "telegram",
    "telegram bot",
    "telegraf"
  ],
  "homepage": "https://github.com/streaming-hell/streaming-hell#readme",
  "bugs": {
    "url": "https://github.com/streaming-hell/streaming-hell/issues",
    "email": "aleksandr@bukhalo.com"
  },
  "author": "Aleksandr Bukhalo (aleksandr@bukhalo.com)",
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest/test/jest-e2e.json",
    "docker:build:telegram-bot": "docker build -t streaming-hell-telegram-bot:$npm_package_version --no-cache -f Dockerfile.telegram-bot .",
    "docker:archive:telegram-bot": "docker save streaming-hell-telegram-bot:$npm_package_version > docker/streaming-hell-telegram-bot-$npm_package_version.tar"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/config": "0.0.9",
    "@nestjs/core": "^6.7.2",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/platform-express": "^6.7.2",
    "apollo-server-express": "^2.9.16",
    "graphql": "^14.5.8",
    "graphql-type-json": "^0.3.1",
    "lodash": "^4.17.15",
    "nestjs-telegraf": "^0.6.0",
    "node-vk-bot-api": "^3.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "spotify-web-api-node": "^4.0.0",
    "telegraf": "^3.35.0",
    "type-graphql": "^0.17.6",
    "typescript-param-validator": "^1.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/odesly/(.*)": "<rootDir>/libs/odesly/src/$1",
      "@app/odesly": "<rootDir>/libs/odesly/src"
    }
  }
}
