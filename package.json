{
  "name": "@streaming-hell/api",
  "version": "2.6.1",
  "description": "Streaming Hell project API - backend for all services",
  "keywords": [
    "telegram",
    "telegram bot",
    "telegraf"
  ],
  "homepage": "https://github.com/streaming-hell/api#readme",
  "bugs": {
    "url": "https://github.com/streaming-hell/api/issues",
    "email": "a@bukhalo.com"
  },
  "author": "Aleksandr Bukhalo (a@bukhalo.com)",
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker build -t streaming-hell:$npm_package_version --no-cache -f Dockerfile .",
    "docker:archive:push": "docker save streaming-hell:$npm_package_version | ssh -C root@95.216.141.51 docker load"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.4.2",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.4.2",
    "@nestjs/graphql": "7.6.0",
    "@nestjs/jwt": "7.1.0",
    "@nestjs/mongoose": "7.0.2",
    "@nestjs/passport": "7.1.0",
    "@nestjs/platform-express": "7.4.2",
    "@nestjs/swagger": "4.5.12",
    "@ntegral/nestjs-sentry": "1.0.4",
    "apollo-server-express": "2.14.2",
    "graphql": "15.3.0",
    "graphql-tools": "6.0.18",
    "graphql-type-json": "0.3.2",
    "helmet": "3.22.0",
    "lodash": "4.17.20",
    "mongoose": "5.9.21",
    "node-vk-bot-api": "3.3.3",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.2",
    "spotify-web-api-node": "4.0.0",
    "swagger-ui-express": "4.1.4",
    "type-graphql": "0.17.6",
    "typescript-param-validator": "1.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.4.1",
    "@nestjs/schematics": "7.0.1",
    "@nestjs/testing": "7.4.2",
    "@types/express": "4.17.7",
    "@types/hapi__joi": "17.1.4",
    "@types/jest": "25.2.1",
    "@types/node": "12.12.24",
    "@types/passport-jwt": "3.0.3",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.22.0",
    "jest": "26.4.0",
    "prettier": "2.0.4",
    "supertest": "4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "6.2.2",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
